<%- include('header'); -%>

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item text-center"> <a class="<% if (loginActive) { %>nav-link active btl<%} else {%>nav-link btr<% } %>" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="<%= loginActive %>">Login</a> </li>
            <li class="nav-item text-center"> <a class="<% if (!loginActive) { %>nav-link active btl<%} else {%>nav-link btr<% } %>" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="<%= !loginActive %>">Forgot ID</a> </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="<% if (loginActive) { %>tab-pane fade show active<%} else {%>tab-pane fade<% } %>" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <form class="form px-4" action="/login/" method ="post">
                    <input type="text" minlength="7" maxlength="7" name="userId" class="form-control" placeholder="User ID" required> <button class="btn btn-dark btn-block">Login</button>
                    <%- loginFormMessage %>
                </form>
            </div>
            <div class="<% if (!loginActive) { %>tab-pane fade show active<%} else {%>tab-pane fade<% } %>" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <form class="form px-4" action="/forgot/" method ="post">
                    <input type="email" name="email" class="form-control" placeholder="Email" required> <button class="btn btn-dark btn-block">Send User ID</button>
                    <%- emailFormMessage %>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('footer'); -%>